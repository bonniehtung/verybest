<!-- Validation failure messages -->
<% if @bookmarked_dishse.errors.any? %>
  <% @bookmarked_dishse.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Bookmarked Dishse #<%= @bookmarked_dishse.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_bookmarked_dishse/<%= @bookmarked_dishse.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for venues_id -->
      <div class="form-group">
        <label for="venues_id" class="control-label">
          Venues
        </label>

        <%= select_tag(:venues_id, options_from_collection_for_select(Venue.all, :id, :dishesyoulove, @bookmarked_dishse.venues_id), :class => "form-control") %>
      </div>

      <!-- Label and input for users_id -->
      <div class="form-group">
        <label for="users_id" class="control-label">
          Users
        </label>

        <input type="text" id="users_id" name="users_id" placeholder="Users" class="form-control" value="<%= @bookmarked_dishse.users_id %>">
      </div>

      <button class="btn btn-warning">
        Update Bookmarked Dishse
      </button>
      or
      <a href="/bookmarked_dishses/<%= @bookmarked_dishse.id %>">Cancel</a>
    </form>
  </div>
</div>
