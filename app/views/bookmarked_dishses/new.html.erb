<!-- Validation failure messages -->
<% if @bookmarked_dishse.errors.any? %>
  <% @bookmarked_dishse.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Bookmarked Dishse</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_bookmarked_dishse" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for venues_id -->
      <div class="form-group">
        <label for="venues_id" class="control-label">
          Venues
        </label>

        <input type="text" id="venues_id" name="venues_id" placeholder="Venues" class="form-control" value="<%= @bookmarked_dishse.venues_id %>">
      </div>

      <!-- Label and input for users_id -->
      <div class="form-group">
        <label for="users_id" class="control-label">
          Users
        </label>

        <input type="text" id="users_id" name="users_id" placeholder="Users" class="form-control" value="<%= @bookmarked_dishse.users_id %>">
      </div>

      <button class="btn btn-success">
        Create Bookmarked Dishse
      </button>
      or
      <a href="/bookmarked_dishses">Cancel</a>
    </form>
  </div>
</div>
